@model List<Department>

<h1 class="alert alert-success">Departments Index</h1>
<h1 class="alert alert-success text-center">Welcome to SkyLine!</h1>
<a asp-controller="Departments" asp-action="GetCreateView" class="btn btn-success mb-1">Create New</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Annual Budget</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.AnnualBudget</td>
                    <td><a asp-controller="Departments" asp-action="GetDetailsView" asp-route-id="@item.Id" >Details</a> </td>

                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" style="text-align:end">Title</th>
                <th>@Model.Sum(e=> e.AnnualBudget)</th>
            </tr>
        </tfoot>
    </table>
}

else
{
    <h1 class="alert alert-danger text-center">There is no department to display</h1>
}

<hr />

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card bg-primary mb-2 text-white text-center" style="width:18rem;height:12rem;display:inline-block">
            <div class="card-header">
                @item.Name
            </div>
            <div class="card-body">
                <h5 class="title">@item.Description </h5>
                <div class="card-text">Started at @item.StartDate.ToShortDateString()</div>
            </div>
            <div class="card-footer">
                @item.AnnualBudget.ToString("C0")
            </div>

        </div>
    }
}
else
{
    <h1 class="alert alert-danger text-center">There is no department to display</h1>
}
